{
  "extends": "@workspace/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["../../apps/pathways/*"],
      "@/mocks/*": ["../../apps/pathways/mocks/*"],
      "@/icons/*": ["../../packages/ui/src/icons/*"],
      "@workspace/ui/*": ["../../packages/ui/src/*"],
      "@/lib/*": ["../../apps/pathways/lib/*", "../../packages/ui/src/lib/*"],
      "@/hooks/*": [
        "../../apps/pathways/hooks/*",
        "../../packages/ui/src/hooks/*"
      ],
      "@/components/*": [
        "../../apps/pathways/components/*",
        "../../packages/ui/src/components/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "next.config.mjs",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
