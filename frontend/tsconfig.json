{
  "extends": "@workspace/typescript-config/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",
    "paths": {
      "@/mocks/*": ["./apps/pathways/mocks/*"],
      "@/hooks/*": ["./packages/ui/src/hooks/*", "./apps/pathways/hooks/*"],
      "@/icons/*": ["./packages/ui/src/icons/*"],
      "@workspace/ui/*": ["./packages/ui/src/*"],
      "@/*": ["./*", "./apps/pathways/*", "./apps/candid/*"],
      "@/lib/*": [
        "./apps/candid/lib/*",
        "./apps/pathways/lib/*",
        "./packages/ui/src/lib/*"
      ],
      "@/components/*": [
        "./apps/candid/components/*",
        "./apps/pathways/components/*",
        "./packages/ui/src/components/*"
      ]
    }
  },

  "include": ["apps/**/*", "packages/**/*"]
}
